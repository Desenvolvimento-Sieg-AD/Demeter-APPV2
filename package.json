{
  "name": "sieg-pagamentos",
  "author": "SIEG AD - Tecnologia",
  "description": "Sistema de Pagamentos - SIEG",
  "version": "1.0.0",
  "private": false,
  "main": ".output/electron/background.js",
  "scripts": {
    "dev": "nuxt dev -o",
    "build": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && electron-builder install-app-deps",
    "transpile-electron": "tsc -p ./electron --outDir .output/electron",
    "dev:electron:lin": "NODE_ENV=development concurrently --kill-others \"nuxt dev\" \"tsc-watch -p ./electron --outDir .output/electron --onSuccess 'electron ./.output/electron/background.js'\"",
    "dev:electron": "set NODE_ENV=development& concurrently --kill-others \"nuxt dev\" \"tsc-watch -p ./electron --outDir .output/electron --onSuccess run.electron\"",
    "build:electron": "yarn build && yarn transpile-electron && node build.js"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "@nuxt/devtools": "^1.1.5",
    "@nuxt/types": "^2.17.3",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@types/express": "^4.17.17",
    "@types/mime": "^4.0.0",
    "concurrently": "^8.0.1",
    "electron": "^30.0.2",
    "electron-builder": "^23.6.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nuxt": "^3.7.1",
    "prettier": "^2.8.7",
    "sass": "^1.75.0",
    "sass-loader": "^13.2.2",
    "vuetify-nuxt-module": "^0.13.2",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@pinia-plugin-persistedstate/nuxt": "^1.2.0",
    "@pinia/nuxt": "0.4.11",
    "@types/electron-is-dev": "^1.1.1",
    "dayjs-nuxt": "^2.1.9",
    "devextreme": "^23.2.5",
    "devextreme-vue": "^23.2.5",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.0.0-beta.16",
    "electron-updater": "^6.1.8",
    "express": "^4.18.2",
    "maska": "1.5.2",
    "mime": "^4.0.1",
    "vue-currency-input": "^3.1.0",
    "vue3-toastify": "^0.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Desenvolvimento-Sieg-AD/Demeter-APPV2/"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "productName": "Your App Name",
    "appId": "com.sieg.pagamentos",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "win": {
      "icon": "build/icons/icon.ico",
      "publish": [
        "github"
      ]
    }
  }
}
